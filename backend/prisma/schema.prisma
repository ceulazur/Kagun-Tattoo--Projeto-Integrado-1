generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tatuador {
  id       Int      @id @default(autoincrement())
  nome     String
  cpf      String   @unique
  telefone String   @unique
  email    String   @unique
  senha    String
  sessoes  Sessao[]
}

model Cliente {
  id       Int      @id @default(autoincrement())
  nome     String
  telefone String   @unique
  sessoes  Sessao[]
}

model Sessao {
  id          Int          @id @default(autoincrement())
  dataHorario DateTime
  termino     DateTime?
  status      StatusSessao @default(agendada)
  idTatuador  Int
  idCliente   Int
  cliente     Cliente      @relation(fields: [idCliente], references: [id])
  tatuador    Tatuador     @relation(fields: [idTatuador], references: [id])
}

model Produto {
  id            Int      @id @default(autoincrement())
  nome          String
  codigo        String   @unique
  lote          String
  validade      DateTime
  quantidade    Int
  categoria     String
  estoqueMinimo Int
}

enum StatusSessao {
  agendada
  concluida
  cancelada
}
